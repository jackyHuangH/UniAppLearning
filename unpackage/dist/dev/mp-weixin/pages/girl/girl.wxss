
.girl-flex {
	-webkit-box-align: start;
	-webkit-align-items: flex-start;
	    -ms-flex-align: start;
	        align-items: flex-start;
}
.girl-img {
	width: 47vw;
	display: inline-block;
	height: 240px;
	position: relative;
}
.girl-img image {
	width: 100%;
	height: 100%;
}
.girl-img.left-img {
	margin: 2vw 1vw 0vw 2vw;
}
.girl-img.right-img {
	margin: 2vw 2vw 0vw 1vw;
}
.img-desc {
	background-color: rgba(0, 0, 0, 0.4);
	width: 100%;
	padding: 15rpx;
	position: absolute;
	left: 0;
	bottom: 0;
	color: #FFFFFF;
	text-align: center;
	border-bottom-left-radius: 6rpx;
	border-bottom-right-radius: 6rpx;
}

